# Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# PostgreSQL Database Configuration (Render)
# Get this from your Render PostgreSQL dashboard - use the INTERNAL database URL
DATABASE_URL=postgresql://username:password@host:port/database

# Example Render Internal URL format:
# DATABASE_URL=postgresql://tasktrack_user:password123@dpg-xxxxxxxxxxxxx/tasktrack_db

# JWT Secret (generate a strong random string)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# JWT Expiration
JWT_EXPIRE=7d

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:3000
